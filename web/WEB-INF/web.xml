<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthorFilter</filter-name>
        <filter-class>controller.AuthorFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>controller.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/numberQuiz.jsp</url-pattern>
        <url-pattern>/makeQuiz.jsp</url-pattern>
        <url-pattern>/takeQuiz.jsp</url-pattern>
        <url-pattern>/manageQuiz.jsp</url-pattern>
        <url-pattern>/result.jsp</url-pattern>
        <url-pattern>/takeQuiz</url-pattern>
        <url-pattern>/home.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorFilter</filter-name>
        <url-pattern>/manageQuiz</url-pattern>
        <url-pattern>/makeQuiz</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerController</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeQuizController</servlet-name>
        <servlet-class>controller.TakeQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>makeQuizController</servlet-name>
        <servlet-class>controller.MakeQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageQuizController</servlet-name>
        <servlet-class>controller.ManageQuizController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteQ</servlet-name>
        <servlet-class>controller.DeleteQController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeQuizController</servlet-name>
        <url-pattern>/takeQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>makeQuizController</servlet-name>
        <url-pattern>/makeQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageQuizController</servlet-name>
        <url-pattern>/manageQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteQ</servlet-name>
        <url-pattern>/DeleteQ</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>ItemOnPage</param-name>
        <param-value>3</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30000
        </session-timeout>
    </session-config>
</web-app>
